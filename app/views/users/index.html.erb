<div class="row">
  <h1>Listing Musicians</h1>
  <div class="medium-9 colmuns">
    <% @users.each do |user| %>
      <h5><%= link_to "#{user.full_name}", user_path(user.id) %></h5>
        <p>City: <%= user.city %><br>
           Genres: <%= user.genre_list %><br>
           Instruments: <%= user.instrument_list %><br>
        <% if current_user %>
           Distance from you: <%= user.distance_to(current_user, :km).round(1) %> KM<br>
        <% end %>
           Email: <%= user.email %><br>
           Biography: <%= truncate(user.bio, length: 100) %>
        </p>
<h6>Click to Sort by Genre: <%= raw user.genre_list.map { |t| link_to t, tag_path(t) }.join(', ') %></h6>
<h6>Click to Sort by Instruments: <%= raw user.instrument_list.map { |t| link_to t, tag_path(t) }.join(', ') %></h6>
    <% end %>
  </div>
</div>

