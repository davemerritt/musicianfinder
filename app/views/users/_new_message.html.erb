<div class="large-6 columns">
  <%= form_for([@user, @invitation], remote: true ) do |f| %>
  <div id="message-form-errors" > 
    <%= render :partial => "/users/message_form_errors" %>
  </div>

    <%= f.hidden_field :recipient_id %>
    <div class="field">
      <%= f.label "Contact this user here!" %><br>
      <%= f.text_area :content %>
    </div>
    
    <div class="actions">
      <%= f.submit "Send" %>
    </div>

  <% end %>
</div>