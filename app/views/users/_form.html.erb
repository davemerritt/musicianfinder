<div class="row">
  <%= form_for @user, html: { multipart: true } do |f| %>
    <% if @user.errors.any? %>   
        <h2>
          <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
        </h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>
</div>
<div class="row">
    <div class="large-6 columns">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
</div>
<div class="row">
    <div class="large-6 columns">
      <%= f.label :first_name, "First Name:" %>
      <%= f.text_field :first_name %>
    </div>
    <div class="large-6 columns">
      <%= f.label :last_name, "Last Name:"  %>
      <%= f.text_field :last_name %>
    </div> 
</div>
<div class="row">
    <div class="large-6 columns">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="large-6 columns">
      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.password_field :password_confirmation %>
    </div>
</div>
<div class="row">
    <div class="large-6 columns">
      <%= f.label "City: " %>
      <%= f.text_field :city %>
    </div>
    <div class="large-6 columns">
      <%= f.label :postal_code, "Postal Code: (used to find nearby musicians)"  %>
      <%= f.text_field :postal_code %>
    </div>
</div>
<div class="row">
    <div class="large-6 columns">
      <%= f.label "Biography: (You can fill me in later) " %>
      <%= f.text_area :bio %>
    </div> 
    <div class="large-6 columns">
      <%= f.label "What are you looking for? (You can fill me in later) " %>
      <%= f.text_area :looking_for %>
    </div>
</div> 
<div class="row">
    <div class="large-6 columns">
      <%= f.label "Genres (separated by commas)" %>
      <%= f.text_field :genre_list %>
    </div>
    <div class="large-6 columns">
      <%= f.label "Instruments (separated by commas)" %>
      <%= f.text_field :instrument_list %>
    </div>
</div>
<div class="row">
    <div class="large-6 columns">
      <%= f.label "Link to Recordings, Band Site etc."  %>
      <%= f.text_field :personal_url %>
    </div>
    <div class="large-6 columns">
        <%= f.label "Choose a Photo" %>
        <%= f.file_field :avatar %>
    </div>
</div>

<div class="row">    
    <div class="large-6 columns">
      <%= f.submit "Save", :class => "tiny radius button" %>
    </div>
</div>
<% end %>
