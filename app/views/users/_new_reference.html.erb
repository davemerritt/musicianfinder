<% if current_user %>

 <h4>Add a Reference for <%= @user.first_name.capitalize %></h4>
 
  <%= form_for([@user, @reference], remote: true ) do |f| %>
    <div id="reference-form-errors" > 
       <%= render :partial => "/users/reference_form_errors" %>
    </div>

    <div class="field"><br/>
      <%= f.text_area :comment %>
    </div>
    <div class="field">
      <%= f.radio_button :feedback_value, 1 %>
      <%= f.label :feedback_value, "Positive" %>
      <%= f.radio_button :feedback_value, 0 %>
      <%= f.label :feedback_value, "Neutral" %>
      <%= f.radio_button :feedback_value, -1 %>
      <%= f.label :feedback_value, "Negative" %>
    </div>
    <div class="field">
      <%= f.check_box :jammed %>
      <%= f.label :jammed, "We've jammed together" %><br>
    </div>
    <div class="field">
      <%= f.check_box :performed %>
      <%= f.label :performed, "We've performed together" %><br>
    </div>  
    <div class="field">
      <%= f.check_box :recorded %>
      <%= f.label :recorded, "We've recorded together" %><br>
    </div>              
    <div class="actions">
      <%= f.submit "Leave Reference", :class => "button radius tiny" %>
    </div>
    </div>
  <% end %>
<% else %>
  <p>Please <%= link_to 'log in', new_session_path %> to leave a reference.</p>
<% end %>

