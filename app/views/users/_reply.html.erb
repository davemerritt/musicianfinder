<div class="row">
  <div class="large-6 columns">
    <%= form_for([@user, @reply], remote: true ) do |f| %>
      <div id="message-form-errors">
        <%= render :partial => "/users/message_form_errors" %>
      </div> 
  </div>

    <%= f.hidden_field :recipient_id, :value => "#{@invitation.user_id}" %>

    <div class="large-6 columns">
      <%= f.label "Contact this user here!" %>
      <%= f.text_area :content %>
      <%= f.submit "Send", :class => "button radius tiny"  %>
    </div>

  <% end %>
</div>