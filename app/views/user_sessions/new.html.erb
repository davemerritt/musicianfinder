<%= form_tag user_sessions_path, :method => :post do %>
  <div class="row">

    <div class="small-12 small-centered medium-8 large-6 columns">
      <h1>Login</h1>
      <%= label_tag :email %>
      <%= text_field_tag :email %>

      <%= label_tag :password %>
      <%= password_field_tag :password %>

      <%= submit_tag "Login", :class => "radius button" %>
    </div>
  </div>
<% end %>