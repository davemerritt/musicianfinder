<%= form_tag user_sessions_path, :method => :post do %>
  <div class="row">
    <div class="large-6 colums">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
    <div class="large-6 colums">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div class="actions">
      <%= submit_tag "Login", :class => "tiny radius button" %>
    </div>
  </div>
<% end %>