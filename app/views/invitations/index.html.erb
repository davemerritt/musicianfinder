<div class="row">
  <div class="small-10 small-centered columns">
        <h2>Inbox</h2>
    <table>
      <thead>
        <tr>
          <th width="100">From</th>
          <th width="500">Message</th>
          <th width="150">Sent</th>
          <th width="110">Mark as Read</th>
          <th width="60">Reply</th>
        </tr>
      </thead>
        <% if current_user.id == @user.id %>
          <% @user.invitations_received.each do |invite| %>
        <tbody>
          <tr class="<%= 'unread_mail' unless invite.recipient_read %>">
            <td><%= link_to "#{invite.user.full_name}", user_path(invite.user_id) %></td>
            <td><%= simple_format invite.content %></td>
            <td><%= invite.created_at.to_formatted_s(:long) %></td>
            <td>
            <% if invite.recipient_read %>
              <%= link_to "Mark as Unread", "invitations/#{invite.id}/read" %>
            <% else %>
              <%= link_to "Mark as Read", "invitations/#{invite.id}/read" %>
            <% end %>
            </td>
            <td><%= link_to "Reply", "invitations/#{invite.id}"  %></td>
          </tr>
        </tbody>
        <% end %>
      <% end %>
    </table>

        <h2>Outbox</h2>
    <table>
      <thead>
        <tr>
          <th width="100">To</th>
          <th width="500">Message</th>
          <th width="150">Sent</th>
          <th width="110">Mark as Read</th>
          <th width="60">Reply</th>
        </tr>
      </thead>
        <% if current_user.id == @user.id %>
        <% @user.invitations_sent.each do |invite| %>
      <tbody>
        <tr class="<%= 'unread_mail' unless invite.sender_read %>">
          <td><%= link_to "#{invite.user.full_name}", "/users/#{invite.user_id}" %></td>
          <td><%= simple_format invite.content %></td>
          <td><%= invite.created_at.to_formatted_s(:long) %></td>
           <td>
            <% if invite.sender_read %>
              <%= link_to "Mark as Unread", "invitations/#{invite.id}/read" %>
            <% else %>
              <%= link_to "Mark as Read", "invitations/#{invite.id}/read" %>
            <% end %>
          </td>
          <td><%= link_to "Reply", "invitations/#{invite.id}" %></td>
        </tr>
      </tbody>
      <% end %>
      <% end %>
    </table>

  </div>
 </div>
